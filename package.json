{
  "name": "ngx-contextmenu",
  "version": "1.3.5",
  "description": "An Angular component to show a context menu on an arbitrary component",
  "keywords": [
    "angular2",
    "contextmenu",
    "angular2-contextmenu",
    "ngx-contextmenu",
    "ngx",
    "ng2",
    "ng2-contextmenu"
  ],
  "author": "Isaac Mann <isaacplmann@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/isaacplmann/ngx-contextmenu.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib && npm run build:demo",
    "build:demo": "rimraf dist/demo && ng build",
    "build:lib": "rimraf dist/lib && ngc && copyfiles package.json README.md LICENSE dist/",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "pub": "npm run pub:lib && npm run pub:demo",
    "pub:demo": "npm run build:demo -- --base-href /ngx-contextmenu/ && gh-pages -d dist/demo",
    "pub:lib": "npm run build:lib && npm publish dist",
    "pack:lib": "npm run build:lib && cd dist && npm pack && copyfiles *.tgz ../ && cd .. && rimraf dist/*.tgz"
  },
  "private": false,
  "peerDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/core": "^4.0.0"
  },
  "devDependencies": {
    "@angular/cli": "1.1.1",
    "@angular/common": "4.1.x",
    "@angular/compiler": "4.1.x",
    "@angular/compiler-cli": "4.1.x",
    "@angular/core": "4.1.x",
    "@angular/platform-browser": "4.1.x",
    "@angular/platform-browser-dynamic": "4.1.x",
    "@angular/router": "4.1.x",
    "@types/jasmine": "2.5.47",
    "@types/node": "^6.0.78",
    "codelyzer": "~2.0.0",
    "copyfiles": "^1.2.0",
    "gh-pages": "0.12.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.1.2",
    "rimraf": "^2.6.1",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.2"
  }
}
